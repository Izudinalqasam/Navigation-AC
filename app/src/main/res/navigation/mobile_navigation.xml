<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mobile_navigation"
            app:startDestination="@id/destination_home">

    <fragment android:id="@+id/destination_home" android:name="com.example.navigationcomponent.HomeFragment"
              android:label="fragment_home" tools:layout="@layout/fragment_home"/>
    <fragment android:id="@+id/destination_camera" android:name="com.example.navigationcomponent.CameraFragment"
              android:label="fragment_camera" tools:layout="@layout/fragment_camera">
        <action android:id="@+id/next_action"
                app:destination="@id/destination_photos"/>
    </fragment>
    <fragment android:id="@+id/destination_photos" android:name="com.example.navigationcomponent.PhotosFragment"
              android:label="fragment_photos" tools:layout="@layout/fragment_photos">
        <action android:id="@+id/next_action" app:destination="@id/destination_home"/>
        <argument android:name="numOfPhotos" app:argType="integer" android:defaultValue="0"/>
    </fragment>
    <fragment android:id="@+id/destination_settings" android:name="com.example.navigationcomponent.SettingFragment2"
              android:label="fragment_setting_fragment2" tools:layout="@layout/fragment_setting_fragment2"/>
</navigation>